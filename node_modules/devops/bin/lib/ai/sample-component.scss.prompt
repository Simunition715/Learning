@import "../../../common-style.scss";

.SimpleComponent {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;

  &__Top {
    flex: 0 0 40px;
    display: flex;
    flex-direction: row;
    align-items: center;
    box-sizing: border-box;
  }

  &__Content {
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    box-sizing: border-box;
  }

  &__Bottom {
    flex: 0 0 40px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    padding: 2px 2px 2px 2px;
    box-sizing: border-box;
  }
}