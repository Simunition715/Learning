import { observable } from "mobx";
import { observer } from "mobx-react";
import React from "react";
import { classnames } from "../../../util/classnames";
import { debugProps, ScrollView, Button } from "../../primitive";
import "./simple-component.scss";
import { ISimpleComponent } from "./simple-component.types";

/**
 * TODO: Write the component description for documentation here
 */
@observer
export class SimpleComponent extends React.Component<ISimpleComponent, IState> {
  @observable private message: string = "Hello";

  componentDidMount() {
    window.addEventListener("resize", handeResize);
  }

  componentWillUnmount() {
    window.removeEventListener("resize", handeResize);
  }

  handleClickAction = () => {
    this.props.onClick?.();
  };

  handleResize = () => {
    this.message = "Resized";
  };

  render() {
    const { className, containerProps, mode, store, children } = this.props;
    const { title, actionName } = store;

    return (
      <div
        className={classnames("SimpleComponent", mode, className)}
        {...containerProps}
      >
        <div className="SimpleComponent__Top">{`${title}: ${this.message}`}</div>
        <div className="SimpleComponent__Content">
          <ScrollView>{children}</ScrollView>
        </div>
        <div className="SimpleComponent__Bottom">
          <Button onClick={this.handleClickAction}>{actionName}</Button>
        </div>
      </div>
    );
  }
}

/** Debug mode of the related component. */
export const SimpleComponentDebug = debugProps(SimpleComponent);
